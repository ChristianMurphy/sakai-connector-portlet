<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
	version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
	
	<portlet>
		<description>Sakai Basic LTI Portlet</description>
		<portlet-name>Sakai-uPortal connector</portlet-name>
		<display-name>Sakai-uPortal connector</display-name>
		<portlet-class>au.edu.anu.portal.portlets.basiclti.PortletDispatcher</portlet-class>
		
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<portlet-info>
			<title>Sakai-uPortal connector</title>
			<short-title>Sakai-uPortal connector</short-title>
			<keywords>sakai, conncetor, basiclti, lti</keywords>
		</portlet-info>
		
		<!-- pages -->
		<init-param>
			<name>viewUrl</name>
			<value>/pages/view.jsp</value>
		</init-param>
		<init-param>
			<name>editUrl</name>
			<value>/pages/edit.jsp</value>
		</init-param>
		<init-param>
			<name>proxyUrl</name>
			<value>/pages/proxy.jsp</value>
		</init-param>
		<init-param>
			<name>errorUrl</name>
			<value>/pages/error.jsp</value>
		</init-param>
		
		<!-- basiclti params -->
		<!-- You MUST set these to the appropriate values for your environment -->
		<init-param>
   			<name>key</name>
   			<value>my.anu.edu.au</value>
		</init-param>
		<init-param>
			<name>secret</name>
			<value>secret</value>
		</init-param>
		<init-param>
			<name>endpoint</name>
			<value>http://localhost:8081/imsblti/provider/</value>
		</init-param>
		<init-param>
   			<name>allowedtools</name>
   			<value>sakai.resources:sakai.rwiki:sakai.profile2:sakai.sitestats</value>
		</init-param>
		
		
		<!-- sakai params -->
		<!-- You MUST set these to the appropriate values for your environment -->
		<init-param>
   			<name>sakai.admin.username</name>
   			<value>admin</value>
		</init-param>
		<init-param>
   			<name>sakai.admin.password</name>
   			<value>admin</value>
		</init-param>
		<init-param>
   			<name>sakai.ws.login.url</name>
   			<value>http://localhost:8081/sakai-axis/SakaiLogin.jws?wsdl</value>
		</init-param>
		<init-param>
   			<name>sakai.ws.script.url</name>
   			<value>http://localhost:8081/sakai-axis/SakaiScript.jws?wsdl</value>
		</init-param>
		
		<!-- attribute mapping configuration -->
		<!-- 
		This must match the 'name' value of the Username user-attribute below so that we can map this correctly in
		different portal environments, or if your environment has this setup differently. 
		uPortal: username
		Liferay: user.name.nickName 
		-->
		<init-param>
   			<name>portal.attribute.mapping.username</name>
   			<value>username</value>
		</init-param>
		
		
	</portlet>
	
	<!--  portlet user attributes -->
	<user-attribute>
		<name>username</name>
		<description>Username attribute</description>
	</user-attribute>
	
   
</portlet-app>